{
  "mcpServers": {
    "monday-api-mcp-hosted-dev": {
      "command": "npx",
      "args": [
        "-y",
        "-p",
        "node@20",
        "-p",
        "mcp-remote@latest",
        "mcp-remote",
        "https://mcp.monday.com/sse",
        "--header",
        "Authorization:Bearer ${MONDAY_API_TOKEN}",
        "--header",
        "Api-Version:2025-07"
      ],
      "env": {
        "MONDAY_API_TOKEN": "REPLACE_WITH_YOUR_TOKEN"
      }
    }
  }
}